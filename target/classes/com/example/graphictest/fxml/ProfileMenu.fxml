<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.graphictest.views.ProfileMenu">
    <center>


        <VBox alignment="CENTER" maxWidth="870.0" prefHeight="623.0" prefWidth="866.0" spacing="10">
            <Button fx:id="back" mnemonicParsing="false" onMouseClicked="#back" text="back"/>
            <ImageView fx:id="avatarPic" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true"/>
            <Label text="Change Username"/>
            <TextField fx:id="username" maxWidth="-Infinity" prefWidth="300.0" promptText="new username"/>

            <Button onMouseClicked="#changeUsername" text="Change Username"/>
            <Label fx:id="usernameError" text=""/>
            <Label text="Change Password"/>
            <TextField fx:id="password" maxWidth="-Infinity" prefWidth="300.0" promptText="new password"/>

            <Button onMouseClicked="#changePassword" text="Change Password"/>
            <Label fx:id="passwordError" text=""/>
            <Button onMouseClicked="#logout" text="Logout"/>
            <Button onMouseClicked="#deleteAccount" text="Delete your account"/>
        </VBox>

    </center>

</BorderPane>
